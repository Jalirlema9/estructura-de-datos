#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;


void main()
{

float a;
float descuento;

cout<<"ingrese el precio del articulo"<<endl;
do{

   cin>>a;

  }while(a<0);

descuento=a*0.50;

cout<<"el descuento es:"<<descuento<<endl;

//el descuento se realizara si el valor del precio es positivo

getch();

}

